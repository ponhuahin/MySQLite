<?xml version="1.0" encoding="utf-8"?><!--<android.support.v7.widget.CardView--><!--xmlns:card_view="http://schemas.android.com/apk/res-auto"--><!--xmlns:android="http://schemas.android.com/apk/res/android"--><!--android:id="@+id/cardView"--><!--android:layout_gravity="center"--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:padding="5dp"--><!--card_view:cardUseCompatPadding="true"--><!--card_view:cardCornerRadius="4dp"--><!--card_view:cardElevation="4dp"--><!--card_view:contentPadding="5dp">-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="5dp">
    <!--android:gravity="center_vertical"-->


    <!--ส่วนชื่อ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ชื่อ : "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lv_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="เล่น"
            android:textColor="@color/lv2"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เงิน :"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lv_job_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text=" "
            android:textSize="15sp" />
    </LinearLayout>
    <!--วันทำงาน -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รับงาน : "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lv_job_dateget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="รับ"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ส่งงาน : "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lv_job_datedue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ส่ง"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="บริษัท : "
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lv_job_name_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" "
            android:textColor="@color/lv1"
            android:textSize="20sp" />

    </LinearLayout>
</LinearLayout><!--</android.support.v7.widget.CardView>-->